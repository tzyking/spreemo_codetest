<p id="notice"><%= notice %></p>

<h1>Listing Patients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Street</th>
      <th>City</th>
      <th>State</th>
      <th>Zip</th>
      <th>Ailment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @patients.each do |patient| %>
      <tr>
        <td><%= link_to patient.name, patient %></td>
        <td><%= patient.email %></td>
        <td><%= patient.street %></td>
        <td><%= patient.city %></td>
        <td><%= patient.state_name %></td>
        <td><%= patient.zip %></td>
        <td><%= patient.ailment %></td>
        <td><%= link_to 'Edit', edit_patient_path(patient) %></td>
        <td><%= link_to 'Delete', patient, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Schedule', new_appointment_path(patient_id: patient.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

